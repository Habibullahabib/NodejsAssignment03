<%- include('./header_footer/header.ejs') %>
<div class="container">

     <div class="row">
        
            <% posts.forEach((index)=>{ %>
                 <div class="col-md-4 mt-3">
                    <img src="/<%= index.feature_image %>" height="400" width="100%" alt="feature image" class="mb-4">
                 </div>
                 <div class="col-md-4 mt-5">
                    <h4><%= index.post_title %></h4>
                    <h6>Category : <%= index.post_category %></h6> 
                <p class="mb-4">Time: <%= index.time %></p>
                <p class="text-justify"> <%= index.post_description %>
                </p>
                 </div>
                <% }) %>
             
         
     </div>
</div>
<%- include('./header_footer/footer.ejs') %>